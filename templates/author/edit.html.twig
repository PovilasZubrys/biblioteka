{% extends 'base.html.twig' %}

{% block title %}Redaguoti autorių{% endblock %}

{% block body %}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header"><h1>Redaguoti autorių</h1></div>

                <div class="card-body">
                    <form action="{{path('author_update', {id: author.id})}}" method="POST">
                        
                        <div class="form-group">
                            <label>Vardas:</label>
                            <input type="text" class="form-control" name="author_name" value="{{author.name}}">
                            <small class="form-text text-muted">Autoriaus vardas</small>
                        </div>

                        <div class="form-group">
                            <label>Pavardė:</label>
                            <input type="text" class="form-control" name="author_surname" value="{{ author.surname }}">
                            <small class="form-text text-muted">Autoriaus pavarde</small>
                        </div>
                        <button type="submit" class="btn btn-primary">Redaguoti autorių</button>

                        <input type="hidden" name="token" value="{{ csrf_token('create_author') }}"/>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}